<h2>Editar Usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
    
  <div class="field">
    <%= f.label :fullname , "Nombre completo" %><br />
    <%= f.text_field :fullname, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :cc , "Cedula" %><br />
    <%= f.number_field :cc, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva contraseña" %> <i>(dejelo en blanco si no desea cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contraseña actual"%> <i>(Necesitamos su contraseña actual para confirmar el cambio)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Actiualizar", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Cancelar cuenta</h3>

<p>Incorforme? <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Esta seguro?" }, :class => "btn btn-danger", method: :delete %></p>

<%= link_to "Atras", appointments_path %>
